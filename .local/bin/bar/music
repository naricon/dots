#!/usr/bin/env bash

if mpc status | grep -qw "\[playing\]"; then
    status="Playing"
    icon=""
elif mpc status | grep -qw "\[paused\]"; then
    status="Paused"
    icon=""
else
    status="Stopped"
fi

if [[ "$status" == "Stopped" ]]; then
    exit 0
fi

case $BLOCK_BUTTON in
  1) mpc prev;;
  2) mpc toggle;;
  3) mpc next;;
#  4) mpc volume +5;;
#  5) mpc volume -5;;
esac

song=$(mpc | head -n 1)
volume=$(mpc status %volume% | sed "s/\ //")

echo -e "$song $volume"
