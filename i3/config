set $mod Mod4

font pango:Ttyp0 10

exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id lxpolkit
exec --no-startup-id ~/.fehbg
exec --no-startup-id picom
exec --no-startup-id xrandr --output HDMI-0 --gamma 1.3:1.3:1.3
exec --no-startup-id dunst

# Use pactl to adjust volume in PulseAudio.
set $refresh_volume pkill -RTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec volume volume_up && $refresh_volume
bindsym XF86AudioLowerVolume exec volume volume_down && $refresh_volume
bindsym XF86AudioMute exec volume volume_mute && $refresh_volume
bindsym $mod+backslash exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# media control
bindsym XF86AudioPrev exec "playerctl -p 'firefox' previous"
bindsym XF86AudioNext exec "playerctl -p 'firefox' next"
bindsym XF86AudioPlay exec "playerctl -p 'firefox' play-pause"

set $refresh_music pkill -RTMIN+11 i3blocks
bindsym $mod+Shift+p exec mpc prev && $refresh_music
bindsym $mod+Shift+bracketleft exec mpc toggle && $refresh_music
bindsym $mod+Shift+bracketright exec mpc next && $refresh_music
bindsym $mod+Shift+minus exec mpc volume -5 && $refresh_music
bindsym $mod+Shift+plus exec mpc volume +5 && $refresh_music
bindsym $mod+a exec add-song add
bindsym $mod+Shift+a exec add-song change
bindsym $mod+b exec add-album
bindsym $mod+c exec change-song

# screenshot
bindsym $mod+Shift+s exec screenshot sel
bindsym $mod+s exec screenshot full

# misc
bindsym $mod+bracketleft exec calendar curr
bindsym $mod+p exec calendar prev
bindsym $mod+bracketright exec calendar next
bindsym $mod+w exec wallpapermenu

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

# start a terminal
bindsym $mod+Return exec st

# kill focused window
bindsym $mod+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec rofi -show

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+x split h

# split in vertical orientation
bindsym $mod+z split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+u layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+y layout toggle split

# toggle tiling / floating
bindsym $mod+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+Shift+space focus mode_toggle

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+r reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+F5 restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym l resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym h resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

bindsym $mod+apostrophe exec xrandr --output HDMI-0 --mode 1920x1080

default_border pixel 2

set_from_resource $bg i3wm.color0
set_from_resource $fg i3wm.color15
set_from_resource $act i3wm.color14
set_from_resource $inact i3wm.color6
set_from_resource $urg i3wm.color9

# colors
# class                 border  bground text    indicator child_border
client.focused          $act    $bg     $act    $act      $act
client.focused_inactive $inact  $bg     $act    $bg       $inact
client.unfocused        $inact  $bg     $inact  $inact    $inact
client.urgent           $urg    $urg    $bg     $urg      $urg
client.placeholder      $inact  $bg     $act    $bg       $bg

client.background       $bg

#client.focused          #666666 #000000 #666666 #666666   #666666
#client.focused_inactive #000000 #000000 #666666 #000000   #000000
#client.unfocused        #000000 #000000 #666666 #000000   #000000
#client.urgent           #FF0000 #FF0000 #FFFFFF #900000   #900000
#client.placeholder      #000000 #000000 #666666 #000000   #0C0C0C
#
#client.background       #FFFFFF

bar {
  status_command i3blocks
  colors {

    background $bg
    statusline $fg
    separator  $inact

    focused_workspace  $inact  $bg  $act
    active_workspace   $bg     $bg  $bg
    inactive_workspace $bg     $bg  $inact
    urgent_workspace   $urg    $urg $bg
    binding_mode       $bg     $bg  $act

    #background #000000
    #statusline #FFFFFF
    #separator  #666666

    #focused_workspace  #666666 #000000 #FFFFFF
    #active_workspace   #000000 #000000 #FFFFFF
    #inactive_workspace #000000 #000000 #666666
    #urgent_workspace   #FF0000 #FF0000 #FFFFFF
    #binding_mode       #000000 #000000 #FFFFFF
  }
}

