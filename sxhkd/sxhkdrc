#Volume
XF86AudioRaiseVolume
	volume volume_up; pkill -RTMIN+10 dwmblocks

XF86AudioLowerVolume
	volume volume_down; pkill -RTMIN+10 dwmblocks

XF86AudioMute
	volume volume_mute; pkill -RTMIN+10 dwmblocks


#Media
XF86AudioPrev
	playerctl -p 'mpv, firefox' previous; 

XF86AudioNext
	playerctl -p 'mpv, firefox' next; 

XF86AudioPlay
	playerctl -p 'mpv, firefox' play-pause; 

super + backslash
	pactl set-source-mute @DEFAULT_SOURCE@ toggle

super + shift + p
    mpc prev; 

super + shift + bracketleft
    mpc toggle; 

super + shift + bracketright
    mpc next; 

super + shift + minus
    mpc volume -5; 

super + shift + plus
    mpc volume +5; 

super + a
    add-song add

super + shift + a
    add-song change

super + b
    add-album

super + c
    change-song

#Reload SXHKD
super + Escape
    pkill -USR1 -x sxhkd


#Misc
super + s
	screenshot full

super + shift + s
	screenshot sel

super + c
	xrandr --output HDMI-A-0 --mode 1920x1080

super + d
    rofi -show

super + bracketleft
    calendar curr

super + p
    calendar prev

super + bracketright
    calendar next

super + w
    wallpapermenu
